<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="system">
    <name>plg_system_videobox</name>
    <author>HitkoDev</author>
    <creationDate>August 2012</creationDate>
    <copyright>Copyright (C) 2016 HtikoDev</copyright>
    <license>GNU General Public License version 3 or later</license>
    <authorEmail>development@hitko.si</authorEmail>
    <authorUrl>hitko.eu</authorUrl>
    <version>5.0.0</version>
    <description>Video plugin for Joomla!</description>
    <files>
        <filename plugin="videobox">videobox.php</filename>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.plg_system_videobox.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_system_videobox.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic" addfieldpath="/libraries/videobox/fields">
            
                <field name="property_sets" type="PropertySet" default="" label="PLG_SYSTEM_VIDEOBOX_PROPERTY_SETS" description="PLG_SYSTEM_VIDEOBOX_PROPERTY_SETS_DESC" />
                    
            </fieldset>
            
            <fieldset name="main">
                
                <field name="multipleDisplay" type="list" default="gallery" label="PLG_SYSTEM_VIDEOBOX_MULTIPLE_DISPLAY" description="PLG_SYSTEM_VIDEOBOX_MULTIPLE_DISPLAY_DESC" >
                    <option value="gallery">Gallery</option>
                    <option value="links">Links</option>
                    <option value="slider">Slider</option>
                </field>
                
                <field name="singleDisplay" type="list" default="player" label="PLG_SYSTEM_VIDEOBOX_SINGLE_DISPLAY" description="PLG_SYSTEM_VIDEOBOX_SINGLE_DISPLAY_DESC" >
                    <option value="player">Direct player</option>
                    <option value="box">Box</option>
                    <option value="links">Link</option>
                </field>
                
                <field name="player" type="list" default="videobox" label="PLG_SYSTEM_VIDEOBOX_PLAYER" description="PLG_SYSTEM_VIDEOBOX_PLAYER_DESC" >
                    <option value="videobox">Lightbox</option>
                    <option value="vbinline">Inline</option>
                </field>
                
                <field name="pWidth" type="number" default="720" min="1" step="1" label="PLG_SYSTEM_VIDEOBOX_PLAYER_WIDTH" description="PLG_SYSTEM_VIDEOBOX_PLAYER_WIDTH_DESC" />
                
                <field name="pHeight" type="number" default="405" min="1" step="1" label="PLG_SYSTEM_VIDEOBOX_PLAYER_HEIGHT" description="PLG_SYSTEM_VIDEOBOX_PLAYER_HEIGHT_DESC" />
                
                <field name="tWidth" type="number" default="480" min="1" step="1" label="PLG_SYSTEM_VIDEOBOX_THUMBNAIL_WIDTH" description="PLG_SYSTEM_VIDEOBOX_THUMBNAIL_WIDTH_DESC" />
                
                <field name="tHeight" type="number" default="360" min="1" step="1" label="PLG_SYSTEM_VIDEOBOX_THUMBNAIL_HEIGHT" description="PLG_SYSTEM_VIDEOBOX_THUMBNAIL_HEIGHT_DESC" />
                
                <field name="perPage" type="number" default="12" min="1" step="1" label="PLG_SYSTEM_VIDEOBOX_PER_PAGE" description="PLG_SYSTEM_VIDEOBOX_PER_PAGE_DESC" />
                
                <field name="color" type="color" default="#50bf82" label="PLG_SYSTEM_VIDEOBOX_COLOR" description="PLG_SYSTEM_VIDEOBOX_COLOR_DESC" />
                
                <field name="delimiter" type="text" default=", " label="PLG_SYSTEM_VIDEOBOX_DELIMITER" description="PLG_SYSTEM_VIDEOBOX_DELIMITER_DESC" />
                
            </fieldset>
            
            <fieldset name="templates">
                
            </fieldset>
        </fields>
    </config>
</extension>
