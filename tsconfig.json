{
    "compilerOptions": {
        "target": "es6",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "declaration": true,
        "noLib": false,
        "outDir": "build",
        "rootDir": "src/ts",
        "stripInternal": true
    },
    "exclude": [
        "node_modules",
        "build"
    ]
}